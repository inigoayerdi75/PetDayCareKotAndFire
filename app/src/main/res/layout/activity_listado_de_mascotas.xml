    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListadoDeMascotas">


    <TextView
        android:id="@+id/textViewListaVacia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No existe ninguna mascota.\n AÃ±ade una mascota al listado."
