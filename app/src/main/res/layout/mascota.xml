<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/textViewEtiquetaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="Nombre"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewEtiquetaNombre"
        android:layout_alignStart="@+id/textViewEtiquetaNombre"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/textViewEtiquetaRaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raza"
        android:layout_toRightOf="@+id/textViewEtiquetaNombre"
        android:layout_alignTop="@+id/textViewEtiquetaNombre"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/textViewRaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewEtiquetaRaza"
        android:layout_alignStart="@+id/textViewEtiquetaRaza"
        android:layout_alignTop="@+id/textViewNombre"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/textViewEtiquetaDuenno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dueño"
        android:layout_alignTop="@+id/textViewEtiquetaRaza"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/textViewDueño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewEtiquetaDuenno"
        android:layout_alignTop="@+id/textViewNombre"
        android:layout_alignStart="@+id/textViewEtiquetaDuenno"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/imageViewMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/anaconda"
        android:layout_marginEnd="25dp"/>

</RelativeLayout>